<Window x:Class="Windows.WindowAppearanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows"
        mc:Ignorable="d"
        Title="WindowAppearanceWindow" Height="450" Width="800">
    <StackPanel>
        <Button Click="Window_NoResize">No Resize</Button>
        <Button Click="Window_CanMinimize">Can Minimize</Button>
        <Button Click="Window_Resize">Can Resize (Default)</Button>
        <Button Click="Window_CanResizeWithGrip">CanResizeWithGrip</Button>
        <Button Click="Window_SingleBorder">Single Border Window (Default)</Button>
        <Button Click="Window_ThreeDBorder">3D Border Window</Button>
        <Button Click="Window_Tool">Tool Window</Button>
        <Button Click="Window_StyleNone">Style None Window</Button>
        <Button Click="NonRectangularWindow">Non Rectangular Window</Button>
    </StackPanel>
</Window>
