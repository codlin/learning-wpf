<Window x:Class="GridDemo.GridFixRowColWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GridDemo"
        mc:Ignorable="d"
        Title="GridFixRowColWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="100" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="AliceBlue" />
        <Rectangle Fill="AntiqueWhite" Grid.Row="0" Grid.Column="1"/>
        <Rectangle Fill="Aqua" Grid.Row="0" Grid.Column="2" />
        <Rectangle Fill="Aquamarine" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" />
        <Rectangle Fill="Azure" Grid.Row="1"  Grid.Column="2" />
        <Rectangle Fill="Beige" Grid.Row="2" Grid.ColumnSpan="3" />

    </Grid>
</Window>
